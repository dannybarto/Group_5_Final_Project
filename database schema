--Creating database tables

CREATE TABLE COUNT_DATA (
	INCIDENT_REPORT_ID VARCHAR NOT NULL,
	DIVISION_ID INT NOT NULL,
	PLACE_TYPE_DESCRIPTION VARCHAR NOT NULL,
	CLEARANCE_STATUS VARCHAR NOT NULL,
	HIGHEST_NIBRS_CODE VARCHAR NOT NULL,
	CITY_NEW VARCHAR NOT NULL
);

CREATE TABLE DATE_DATA (
	INCIDENT_REPORT_ID VARCHAR NOT NULL,
	DIVISION_ID INT NOT NULL,
	DATE_INCIDENT_BEGAN DATE NOT NULL,
	HIGHEST_NIBRS_CODE VARCHAR NOT NULL,
	YEAR INT NOT NULL,
	MONTH INT NOT NULL,	
	year_month VARCHAR NOT NULL,
	CITY_NEW VARCHAR NOT NULL
);
	
CREATE TABLE LOCATION_DATA (
	INCIDENT_REPORT_ID VARCHAR NOT NULL,
	ZIP VARCHAR NOT NULL,
	LATITUDE_PUBLIC FLOAT NOT NULL,
	LONGITUDE_PUBLIC FLOAT NOT NULL,
	DIVISION_ID INT NOT NULL,
	PLACE_TYPE_DESCRIPTION VARCHAR NOT NULL,
	HIGHEST_NIBRS_CODE VARCHAR NOT NULL,
	CITY_NEW VARCHAR NOT NULL
);

CREATE TABLE VIOLENCE_COUNT (
	INCIDENT_REPORT_ID VARCHAR NOT NULL,
	DIVISION_ID INT NOT NULL,
	PLACE_TYPE_DESCRIPTION VARCHAR NOT NULL,
	CLEARANCE_STATUS VARCHAR NOT NULL,
	HIGHEST_NIBRS_CODE VARCHAR NOT NULL,
	CITY_NEW VARCHAR NOT NULL,
	VIOLENCE VARCHAR NOT NULL
)

DROP TABLE LOCATION_DATA